@model KindHands.DAL.Models.User
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="~/css/login-register.css">

</head>
<body>

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h2 class="text-center">Welcome to Kind Hands!</h2>

                <h3 class="text-center pt-5 mb-5">Login</h3>

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @TempData["ErrorMessage"]
                    </div>
                }

                <div class="mb-3 text-center">
                    <button type="button" class="btn registration-option selected" onclick="FormManager.selectOption('volunteer')">Volunteer</button>
                    <button type="button" class="btn registration-option" onclick="FormManager.selectOption('organisation')">Organisation</button>
                </div>

                <form asp-action="LoginVolunteer" method="post" id="volunteer-form">
                    <div class="volunteer-field">
                        <label for="volunteer-email">Email:</label>
                        <input type="email" class="form-control" id="volunteer-email" name="email" autocomplete="on" required />
                    </div>

                    <div class="volunteer-field">
                        <label for="volunteer-password">Password:</label>
                        <input type="text" class="form-control" id="volunteer-password" name="password" required />
                    </div>

                    <div class="volunteer-field">
                        <label for="volunteer-phone-number">Phone number:</label>
                        <input type="text" class="form-control" id="volunteer-phone-number" name="phoneNumber" autocomplete="on" required />
                    </div>

                    <div class="volunteer-field text-center pt-1 mt-4">
                        <button style="background: #FCC100; border-color: #FFC100" type="submit" class="btn btn-primary" onsubmit="FormManager.clearFormInputs()">Login</button>
                    </div>

                    <p class="text-center mt-5">
                        Don't have an account? <a asp-controller="Home" asp-action="Register" style="color: #FCC100">Register now</a>
                    </p>

                </form>

                <form asp-action="LoginOrganisation" method="post" id="organisation-form" class="hidden">
                    <div class="organisation-field">
                        <label for="organisation-email">Email:</label>
                        <input type="email" class="form-control" id="organisation-email" name="email" autocomplete="on" required />
                    </div>

                    <div class="organisation-field">
                        <label for="organisation-password">Password:</label>
                        <input type="text" class="form-control" id="organisation-password" name="password" required />
                    </div>

                    <div class="organisation-field">
                        <label for="organisation-phone-number">Phone number:</label>
                        <input type="text" class="form-control" id="organisation-phone-number" name="phoneNumber" autocomplete="on" required />
                    </div>

                    <div class="volunteer-field text-center pt-1 mt-4">
                        <button style="background: #FCC100; border-color: #FFC100" type="submit" class="btn btn-primary" onsubmit="FormManager.clearFormInputs()">Login</button>
                    </div>

                    <p class="text-center mt-5">
                        Don't have an account?
                        <a asp-controller="Home" asp-action="Register" style="color: #FCC100;">Register now</a>
                    </p>

                </form>

            </div>

        </div>
    </div>

    <script type="text/javascript" src="~/js/form.js"></script>

</body>